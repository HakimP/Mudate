
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email%><br/>
    <%= f.email_field :email, autofocus: true, :placeholder=>'Email address', :class=>"form-control", :id=>"exampleInputEmail2", :type=>"email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :type=>"password", :class=>"form-control", :id=>"exampleInputPassword2", :placeholder=>"Password" %>
  </div>

  <div class="help-block text-right">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :type=>"submit", :class=>"btn btn-primary btn-block" %>
  </div>
<% end %>
